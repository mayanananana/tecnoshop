<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_external_data_template">
        <t t-call="web.html_container">
            <!--
                Ahora 'docs' es un recordset real de Odoo. Podemos iterar
                y acceder a los campos usando la notaciÃ³n de punto.
            -->
            <t t-foreach="docs" t-as="d">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h3><span t-esc="d.nombre"/></h3>

                        <div class="row mt-4">
                            <div class="col-4"><strong>ID:</strong> <span t-esc="d.id"/></div>
                            <div class="col-4"><strong>Total:</strong> <span t-esc="d.total" t-options="{'widget': 'float', 'precision': 2}"/></div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>